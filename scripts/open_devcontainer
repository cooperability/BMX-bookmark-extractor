#!/bin/bash
# Interactive script to open BMX project in Cursor DevContainer
set -e

# Navigate to project root
cd "$(dirname "$0")"/..

echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
echo "  ğŸš€ BMX DevContainer Setup"
echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
echo ""

# Check if Docker is running
echo "Step 1/4: Checking Docker..."
if ! docker ps > /dev/null 2>&1; then
    echo "âŒ Error: Docker is not running!"
    echo "   Please start Docker Desktop and try again."
    exit 1
fi
echo "âœ… Docker is running"
echo ""

# Get absolute path
PROJECT_PATH="$(pwd)"
echo "ğŸ“ Project path: $PROJECT_PATH"
echo ""

# Verify devcontainer exists
if [ ! -f ".devcontainer/devcontainer.json" ]; then
    echo "âŒ Error: No .devcontainer/devcontainer.json found!"
    echo "   This project may not be configured for devcontainers."
    exit 1
fi

# Open Cursor/Code
echo "Step 2/4: Opening project in editor..."
if command -v cursor > /dev/null 2>&1; then
    echo "ğŸ“‚ Launching Cursor with explicit path..."
    cursor "$PROJECT_PATH"
    EDITOR="Cursor"
elif command -v code > /dev/null 2>&1; then
    echo "ğŸ“‚ Launching VS Code with explicit path..."
    code "$PROJECT_PATH"
    EDITOR="VS Code"
else
    echo "âŒ Neither 'cursor' nor 'code' command found!"
    echo ""
    echo "Please manually:"
    echo "1. Open Cursor or VS Code"
    echo "2. File â†’ Open Folder â†’ $PROJECT_PATH"
    exit 1
fi

echo "âœ… $EDITOR should be opening..."
echo ""

# Wait for user to confirm editor is open
echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
echo "Step 3/4: Reopen in Container"
echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
echo ""
echo "Once $EDITOR is open, follow these steps:"
echo ""
echo "  1ï¸âƒ£  Press F1 (or Ctrl+Shift+P)"
echo "  2ï¸âƒ£  Type: Reopen in Container"
echo "  3ï¸âƒ£  Press Enter"
echo ""
read -p "Press ENTER when you've completed the above steps..."
echo ""

# Explain what happens next
echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
echo "Step 4/4: Building Container"
echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
echo ""
echo "â³ The container is now building. This takes 5-10 minutes"
echo "   the first time (subsequent starts are instant)."
echo ""
echo "You'll see progress in $EDITOR showing:"
echo "  â€¢ Building images"
echo "  â€¢ Installing Python dependencies (Poetry)"
echo "  â€¢ Installing Node dependencies (Yarn)"
echo "  â€¢ Configuring extensions"
echo ""
read -p "Press ENTER to see the next steps for after the build..."
echo ""

# Show post-build commands
echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
echo "âœ¨ Once the Container is Built"
echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
echo ""
echo "You'll be inside the container! Run these commands:"
echo ""
echo "  ğŸ“¦ Backend (FastAPI):"
echo "     poetry run uvicorn src.main:app --host 0.0.0.0 --port 8000 --reload"
echo ""
echo "  ğŸ¨ Frontend (SvelteKit) - in a new terminal:"
echo "     cd /project/frontend && yarn dev"
echo ""
echo "  ğŸ§ª Run tests:"
echo "     ./scripts-devcontainer/test"
echo ""
echo "  ğŸ” Access services:"
echo "     Backend API:  http://localhost:8000/docs"
